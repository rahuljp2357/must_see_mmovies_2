<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Casts

    <a data-toggle="collapse" href="#movie_casts_new_form">
      Add cast
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @movie.casts.each do |cast| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to cast, cast %>

        <%= link_to cast, method: :delete, data: { confirm: "Do you really want to delete this cast" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="movie_casts_new_form">
        <%= render partial: "movies/movie_casts_new_form" %>
      </div>
    </div>

  </ul>
</div>
