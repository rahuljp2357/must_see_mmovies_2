<%= form_with(model: @cast, local: true) do |f| %>

  <%= f.hidden_field :character_id, value: @character.id %>

  <div class="form-group">
    <%= f.label :movie_id %>

    <%= f.collection_select :movie_id, Movie.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :actors_id %>

    <%= f.collection_select :actors_id, Actor.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create cast", class: "btn btn-block btn-outline-secondary" %>
<% end %>
